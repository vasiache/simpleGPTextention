{
    "name": "openGPTassistant",
    "displayName": "My VS Code Extension",
    "description": "Расширение для отправки запросов на заданный URL с кастомными промтами и чат-окном.",
    "version": "0.0.1",
    "repository": {
      "type": "git",
      "url": "https://github.com/vasiache/openGPTassistant"
    },
    "publisher": "Vasilii Chetvertukh",
    "engines": {
      "vscode": "^1.70.0"
    },
    "categories": [
      "Other"
    ],
    "activationEvents": [
      "onCommand:extension.sendPrompt",
      "onCommand:extension.openChat",
      "onCommand:extension.addPrompt"
    ],
    "main": "./out/extension.js",
    "contributes": {
      "commands": [
        {
          "command": "extension.sendPrompt",
          "title": "Отправить запрос с промтом"
        },
        {
          "command": "extension.openChat",
          "title": "Открыть чат"
        },
        {
          "command": "extension.addPrompt",
          "title": "Добавить новый промт"
        }
      ],
      "menus": {
        "editor/context": [
          {
            "command": "extension.sendPrompt",
            "when": "editorTextFocus",
            "group": "navigation"
          }
        ]
      },
      "configuration": {
        "type": "object",
        "title": "My Extension Configuration",
        "properties": {
          "myExtension.apiKey": {
            "type": "string",
            "default": "",
            "description": "API ключ для доступа к сервису"
          },
          "myExtension.apiUrl": {
            "type": "string",
            "default": "http://localhost:8000/llm/v1/chat/completion",
            "description": "URL для отправки запросов"
          }
        }
      }
    },
    "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "package": "vsce package"
    },
    "devDependencies": {
      "typescript": "^4.9.0",
      "vscode": "^1.1.37",
      "@types/node": "^16.0.0",
      "vsce": "^2.14.0"
    }
  }
  